<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h1 class="h4 mb-0">Authentication</h1>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <p>Authentication is required to access this application.</p>
          <a href="/login" class="btn btn-primary">Login with Auth0</a>
        </div>
      </div>
    </div>
  </div>
</div>